def gs 

pipeline{
    agent any
    stages{
        stage("load-script"){
            steps{
                script{
                    gs = load "gs.groovy"
                }
            }
        }
        stage("build-vote-image"){
            steps{
                script{
                    gs.build('hamdiz0/va-vote','latest','docker-repo','./vote')
                }
            }
        }
        stage("build-result-image"){
            steps{
                script{
                    gs.build('hamdiz0/va-result','latest','docker-repo','./result')
                }
            }
        }
        stage("build-worker-image"){
            steps{
                script{
                    gs.build('hamdiz0/va-worker','latest','docker-repo','./worker')
                }
            }
        }
    }
}
